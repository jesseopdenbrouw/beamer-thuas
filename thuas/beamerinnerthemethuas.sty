      \useasboundingbox (-0.385\paperwidth,-1) [yshift=-2.3cm] rectangle (\the\paperwidth,\the\tph);
      \node at (0.5,1.5) {\includegraphics[width=0.82\paperwidth]{beamerthemethuasfront.pdf}};
      \node at (4.60,-2.5) {\resizebox{0.29\paperwidth}{!}{\beamerthemethuaslogo}};
    \end{tikzpicture}
  % 16:9
  \else
    \begin{tikzpicture}
      \useasboundingbox (-0.385\paperwidth,-1) [yshift=-2.3cm] rectangle (\the\paperwidth,\the\tph);
      \node at (0.1,1.1) {\includegraphics[width=0.82\paperwidth]{beamerthemethuasfront.pdf}};
      \node at (4.60,-2.5) {\resizebox{0.29\paperwidth}{!}{\beamerthemethuaslogo}};
    \end{tikzpicture}
  \fi

  %% Very dirty hack to test if we use 16:9 or 4:3
  \ifdim\beamer@paperwidth<12.81cm
  %% 4:3
    \vskip-2.0cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.9cm,sep=1pt]{title page header}%
      \usebeamerfont{title}\inserttitle%
    \end{beamercolorbox}%
    \vskip0.25cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.9cm,sep=1pt]{author}%
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.9cm,sep=1pt]{date}
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}%
  \else
  %% 16:9
    \vskip-1.5cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.0cm,sep=1pt]{title page header}%
      \usebeamerfont{title}\inserttitle%
    \end{beamercolorbox}%
    \vskip0.25cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.0cm,sep=1pt]{author}%
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=12cm,leftskip=0.0cm,sep=1pt]{date}
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}%
  \fi
  \vfill
}

