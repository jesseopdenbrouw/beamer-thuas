\ProvidesPackage{beamercolorthemethuas}[\beamerthemethuasdate\space \beamerthemethuasversion\space The Hague University of Applied Sciences color theme]
\typeout{The Hague University of Applied Sciences color theme \beamerthemethuasversion\space (JodB, 2021)}

\mode<presentation>

%% Define thuas color green
\definecolor{thuasgreen}{RGB}{158,167,0}
\definecolor{thuasgray}{RGB}{34,51,67}
\definecolor{thuasgrey}{RGB}{34,51,67}
\definecolor{thuasblue}{RGB}{0,181,212}
\definecolor{thuasyellow}{RGB}{255,168,60}
\definecolor{thuasred}{RGB}{202,67,60}

%% Colors
\setbeamercolor*{alerted text}{fg=thuasred}

\setbeamercolor*{title page header}{fg=thuasgray}
\ifbeamerthemethuas@official
\setbeamercolor*{author}{fg=white}
\else
\setbeamercolor*{author}{fg=thuasgray}
\fi
\setbeamercolor*{date}{fg=thuasgray}
\setbeamercolor*{frametitle}{fg=\beamerthemethuascolor}
\setbeamercolor*{block title}{fg=\beamerthemethuascolor}
%\setbeamercolor*{block title}{use=structure,fg=white,bg=thuasgreen}
\setbeamercolor*{enumerate item}{fg=thuasgray}
\setbeamercolor*{enumerate subitem}{fg=thuasgray}
\setbeamercolor*{enumerate subsubitem}{fg=thuasgray}
\setbeamercolor*{itemize item}{fg=thuasgray}
\setbeamercolor*{itemize subitem}{fg=thuasgray}
\setbeamercolor*{itemize subsubitem}{fg=thuasgray}
\setbeamercolor*{page number in head/foot}{fg=thuasgray}
\setbeamercolor*{normal text}{fg=thuasgray}
\setbeamercolor*{page number in head/foot}{fg=thuasgray}
\setbeamercolor*{caption name}{fg=thuasgray}
\setbeamercolor*{qed symbol}{fg=\beamerthemethuascolor}
\setbeamercolor*{description item}{fg=thuasgray}

\mode<all>